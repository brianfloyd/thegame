{
  "name": "thegame",
  "version": "2.0.0",
  "description": "Multiplayer game server with WebSocket support and PostgreSQL database",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --ext js,json,css,html server.js",
    "dev:stable": "node scripts/restart-stable.js",
    "dev:both": "concurrently \"npm run dev\" \"npm run dev:stable\"",
    "migrate": "node scripts/migrate.js",
    "migrate-data": "node scripts/migrate-data.js",
    "test-email": "node scripts/test-email.js",
    "test-email-simple": "node scripts/test-email-simple.js",
    "test-email-auth": "node scripts/test-email-auth.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "nodemailer": "^7.0.11",
    "pg": "^8.11.3",
    "uuid": "^10.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "better-sqlite3": "^11.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2"
  }
}
